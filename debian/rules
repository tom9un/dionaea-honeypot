#!/usr/bin/make -f

package = dionaea

CC = gcc
#CFLAGS = -g -Wall
#CFLAGS = -Werror

#ifeq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
#  CFLAGS += -O2
#endif

#export DH_VERBOSE=1

clean:
	rm -f build-stamp
	if [ -f Makefile ]; then $(MAKE) clean distclean; fi
	rm -f debian/*README.Debian
	dh_clean

config.h: clean
	dh_testdir
	dh_auto_configure

build: build-stamp

build-stamp: config.h
	dh_auto_build
	touch $@


install: build
	dh_testdir
	dh_testroot
	dh_installdirs
	dh_auto_install
	rm $(CURDIR)/debian/dionaea/usr/lib/dionaea/python/dionaea/core.so
	dh_link usr/lib/dionaea/python.so usr/lib/dionaea/python/dionaea/core.so
	dh_link usr/lib/dionaea/python.so usr/lib/dionaea/python/dionaea/pyev.so

binary-indep: install
# There are no architecture-independent files to be uploaded
# generated by this package.  If there were any they would be
# made here.

binary-arch: install
	dh_testdir -a
	dh_testroot -a
#	dh_installdocs -a NEWS
#	dh_installchangelogs -a ChangeLog
	dh_strip -a
	dh_compress -a
	dh_fixperms -a
	dh_installdeb -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary: binary-indep binary-arch

.PHONY: binary binary-arch binary-indep clean checkroot
